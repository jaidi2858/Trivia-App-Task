<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/edittext_background_new"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:layout_weight=".1"
                android:id="@+id/tvNumber"
                style="@style/TvNormalStyle"
                android:layout_width="0dp"
                android:textAlignment="viewStart"
                android:gravity="start|top"
                android:layout_gravity="start|top"
                android:textSize="@dimen/_16sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1)"
                android:textColor="@color/nav_color_light_black" />
            <TextView
                android:layout_weight=".9"
                android:textAlignment="viewStart"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/tvQuestions"
                android:gravity="start|top"
                android:layout_gravity="start|top"
                style="@style/TvNormalStyle"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:autoLink="web"
                android:textColor="@color/nav_color_light_black" />

        </LinearLayout>
        <RadioGroup
            xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rgQuestionAnswerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/RadioButtonStyle">

        </RadioGroup>

    </LinearLayout>


</androidx.cardview.widget.CardView>